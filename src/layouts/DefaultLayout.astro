---

import BaseHead from '@/components/BaseHead.astro';
import Footer from '@/components/Footer.astro';
import PretendardFont from '@/components/PretendardFont.astro';
import type { SEOProps } from '@/type';

interface Props {
  seo? : Partial<SEOProps>
}

const { seo } = Astro.props

---

<html lang="ko">
	<head>
		<BaseHead {...seo} />
		<PretendardFont />
	</head>

	<body class="max-w-2xl mx-auto font-sans font-light">
		<main class="min-h-dvh lg:m-0">
      <slot />
		</main>
		<Footer />
	</body>
</html>
