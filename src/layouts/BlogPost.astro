---
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'dev'>['data'];

const { title, description, img, date, icon } = Astro.props;

---

<article>
	<!-- 고정 배경 섹션 -->
	<div class="bg-fixed bg-center bg-cover w-full min-h-[80vh] bg-no-repeat" style=`background-image: url(${img});` />

	<!-- 내용 섹션 -->
	<div class="rounded-lg relative">
		{icon && <div class="absolute -top-10 left-1/2 transform -translate-x-1/2 bg-zinc-100 w-20 h-20 flex items-center justify-center rounded-full text-5xl shadow-md">
			{icon}
		</div>}
		<div class="max-w-2xl p-2 pt-16 bg-white shadow-lg rounded-lg">
			<div class="flex flex-col items-center text-center">
				<h1 class="text-2xl font-bold mb-4">{title}</h1>
				<p>{description}</p>
				<p class="text-gray-500 text-sm mb-6">{date}</p>
				<hr class="border-b-[0.01rem] my-10 border-gray-500 w-full"/>
			</div>
				<slot />
		</div>
	</div>
</article>

