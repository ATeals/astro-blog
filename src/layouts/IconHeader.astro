---
import type { HTMLAttributes } from 'astro/types';

interface Props {
  title?: string;
  props?: HTMLAttributes<'div'>;
}

const { title, props } = Astro.props;
---

<div class="flex h-72 w-full flex-col items-center justify-center" {...props}>
  <div class="flex items-center justify-center overflow-hidden rounded-full shadow-lg">
    <slot name="icon" />
  </div>
  <h1 class="mt-2 font-medium">{title}</h1>
</div>
