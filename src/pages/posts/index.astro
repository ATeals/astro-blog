---

import FormattedDate from '@/components/FormattedDate.astro';
import DefaultLayout from '@/layouts/DefaultLayout.astro';
import { Document } from '@/service/mdx';

const document = await Document.getAll(); 

const posts = [...document]

---

<DefaultLayout>
	<section>
		<ul class="grid md:grid-cols-2 gap-2">
			{
				posts.map((post) => (
					<li>
						<a href={post.href}>
							<img width={720} height={360} src={post.data.img} alt={post.data.title} class="rounded-lg" />
							<h4 class="font-normal text-lg">{post.data.title}</h4>
							<p class="text-sm">
								<FormattedDate date={post.data.date} />
							</p>
						</a>
					</li>
				))
			}
		</ul>
	</section>
</DefaultLayout>